<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:TaskManager4.ViewModels"
             x:Class="TaskManager4.Views.TaskEditorView"
             x:DataType="vm:TaskEditorViewModel">

    <StackPanel Margin="10" Spacing="10">

        <TextBlock Text="Название:"/>
        <TextBox Text="{Binding Task.Title}"/>

        <TextBlock Text="Описание:"/>
        <TextBox Text="{Binding Task.Description}"/>

        <CheckBox Content="Выполнено"
                  IsChecked="{Binding Task.IsDone}"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10">
            <Button Content="Сохранить"
                    Command="{Binding SaveCommand}"/>
            <Button Content="Отмена"
                    Command="{Binding CancelCommand}"/>
        </StackPanel>

    </StackPanel>
    
</UserControl>